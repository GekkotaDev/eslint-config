{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,
    "lib": ["ESNext"],
    "declaration": true
  },
  "include": ["lib/**/*"]
}
